---
// src/components/CardProjeto.astro

interface Props {
    slug: string; // <-- ADICIONAMOS O SLUG AQUI
    titulo: string;
    descricao: string;
    tags: string[];
    linkGit: string;
}
const { slug, titulo, descricao, tags, linkGit } = Astro.props;
---
<div class="bg-slate-800 rounded-lg p-6 flex flex-col border border-slate-700 hover:border-emerald-500 transition-colors">
    <h4 class="text-xl font-bold text-white mb-2">{titulo}</h4>
    <p class="text-slate-400 mb-4 flex-grow">{descricao}</p>
    
    <div class="flex flex-wrap gap-2 mb-4">
        {tags.map(tag => (
            <span class="bg-slate-700 text-emerald-300 text-xs font-semibold px-2.5 py-0.5 rounded-full">{tag}</span>
        ))}
    </div>

    <div class="mt-auto flex items-center gap-6">
        <a href={`/projetos/${slug}`} class="bg-emerald-500 hover:bg-emerald-600 text-white font-bold py-2 px-4 rounded-lg transition-colors text-sm">
            Ver Estudo de Caso
        </a>
        <a href={linkGit} target="_blank" class="text-slate-300 hover:text-emerald-400 transition-colors text-sm">Ver no GitHub</a>
    </div>
</div>