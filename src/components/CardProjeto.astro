---
interface Props {
    titulo: string;
    descricao: string;
    tags: string[];
    linkGit: string;
    linkLive?: string; // Link opcional
}
const { titulo, descricao, tags, linkGit, linkLive } = Astro.props;
---
<div class="bg-slate-800 rounded-lg p-6 flex flex-col border border-slate-700 hover:border-emerald-500 transition-colors">
    <h4 class="text-xl font-bold text-white mb-2">{titulo}</h4>
    <p class="text-slate-400 mb-4 flex-grow">{descricao}</p>
    
    <div class="flex flex-wrap gap-2 mb-4">
        {tags.map(tag => (
            <span class="bg-slate-700 text-emerald-300 text-xs font-semibold px-2.5 py-0.5 rounded-full">{tag}</span>
        ))}
    </div>

    <div class="mt-auto flex gap-4">
        <a href={linkGit} target="_blank" class="text-white font-bold hover:text-emerald-400 transition-colors">Ver no GitHub</a>
        {linkLive && <a href={linkLive} target="_blank" class="text-white font-bold hover:text-emerald-400 transition-colors">Demo Online</a>}
    </div>
</div>