---
import en from "../i18n/en.js";
import pt from "../i18n/pt.js";

const t = Astro.currentLocale === 'en' ? en : pt;
---
<section class="max-w-4xl mx-auto h-screen flex flex-col justify-center items-center text-center">
    <h1 class="text-4xl md:text-6xl font-bold text-white mb-4">
        {t.hero.title}
    </h1>
    <h2 class="text-2xl md:text-3xl text-slate-300 mb-8">
        {t.hero.subtitle}
    </h2>

    <div class="flex flex-col sm:flex-row gap-4">
        <a href="#contato" class="bg-emerald-500 hover:bg-emerald-600 text-white font-bold py-3 px-6 rounded-lg transition-colors">
            {t.hero.contactBtn}
        </a>
        
        <a 
            href="/CV_Jair_Ribeiro.pdf" 
            download 
            class="border border-emerald-500 text-emerald-500 hover:bg-emerald-500 hover:text-white font-bold py-3 px-6 rounded-lg transition-colors"
        >
            {t.hero.resumeBtn}
        </a>
    </div>
</section>