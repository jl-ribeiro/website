---
// Este componente recebe um 'name' e mostra o ícone SVG correspondente.
interface Props {
    name: string;
}
const { name } = Astro.props;

// Adicione mais SVGs aqui conforme precisar. 
// Você pode encontrar ícones gratuitos em sites como "tablericons.com" ou "simpleicons.org"
// Lembre-se de adicionar `class="w-12 h-12"` no SVG.
---
<div class="flex flex-col items-center gap-2">
    <Fragment>
        {name === 'Python' && <svg xmlns="http://www.w3.org/2000/svg" class="w-12 h-12 icon icon-tabler icon-tabler-brand-python" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round"><path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M12 9h-7a2 2 0 0 0 -2 2v4a2 2 0 0 0 2 2h3" /><path d="M12 15h7a2 2 0 0 0 2 -2v-4a2 2 0 0 0 -2 -2h-3" /><path d="M8 9v-4a2 2 0 0 1 2 -2h4a2 2 0 0 1 2 2v5" /><path d="M16 15v4a2 2 0 0 1 -2 2h-4a2 2 0 0 1 -2 -2v-5" /><path d="M9 9a1 1 0 0 0 1 -1v-2a1 1 0 0 0 -1 -1" /><path d="M15 15a1 1 0 0 0 1 1v2a1 1 0 0 0 -1 1" /></svg>}
