---
import pt from '../i18n/pt.js';
import en from '../i18n/en.js';

const t = Astro.currentLocale === 'en' ? en : pt;
---
<section id="contato" class="max-w-3xl mx-auto py-20 text-center">
    <h3 class="text-3xl font-bold text-white mb-4">{t.contato.title}</h3>
    <p class="text-lg mb-8">
        {t.contato.paragraph}
    </p>
    <a href="mailto:jlribeiro@id.uff.br" class="bg-slate-800 hover:bg-slate-700 border border-slate-700 text-white font-bold py-3 px-6 rounded-lg transition-colors">
        {t.contato.email}
    </a>
    <div class="mt-8 flex justify-center gap-6">
        <a href="https://linkedin.com/in/jlribeiro" target="_blank" class="text-slate-400 hover:text-emerald-400">LinkedIn</a>
        <a href="https://github.com/jl-ribeiro" target="_blank" class="text-slate-400 hover:text-emerald-400">GitHub</a>
    </div>
</section>