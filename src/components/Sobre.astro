---
import en from "../i18n/en.js";
import pt from "../i18n/pt.js";

const t = Astro.currentLocale === 'en' ? en : pt;
---
<section id="sobre" class="max-w-3xl mx-auto py-20">
    <h3 class="text-3xl font-bold text-white text-center mb-8">{t.sobre.title}</h3>
    <p class="text-lg mb-4">
        {t.sobre.paragraph1}
    </p>
    <p class="text-lg">
        {t.sobre.paragraph2}
    </p>
</section>